<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="App Usage"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#E8900E"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:entries="@array/usage_stats_display_order_types"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="App Name       |"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:paddingEnd="6dip"
            android:layout_height="wrap_content"
            android:background="#E8900E"
            />
        <TextView
            android:text="Last Time Used       |"
            android:paddingEnd="6dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E8900E"/>
        <TextView
            android:text="Used Time         "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E8900E"/>
    </LinearLayout>

    <ListView
        android:id="@+id/pkg_list"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:drawSelectorOnTop="true" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#E8900E"
        android:text="Feedback"
        android:textColor="#FFFFFF"
        android:textStyle="bold">
    </Button>

</LinearLayout>